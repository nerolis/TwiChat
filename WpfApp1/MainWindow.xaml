<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <RoutedUICommand x:Key="SendMsg" Text="Text" />
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource SendMsg}" Executed="SendMsgToChat_Click" />
    </Window.CommandBindings>
    
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{StaticResource SendMsg}" />
    </Window.InputBindings>
    
    <Grid RenderTransformOrigin="0.476,0.512" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*" />
            <ColumnDefinition Width="223*"/>
            <ColumnDefinition Width="396*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Command="{StaticResource SendMsg}" x:Name="ConnectChannel"  Content="Join Channel" Foreground="White" VerticalAlignment="Bottom" Height="28" Width="Auto" Background="{x:Null}" FontStyle="Italic"  Grid.Column="2" BorderBrush="White">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.28"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBox x:Name="ChannelName" Height="21" TextWrapping="Wrap" Text="Channel Name" Width="auto" Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,0,29" Background="{x:Null}" Foreground="White" BorderBrush="White" FontStyle="Italic" FontSize="14" />
        <TextBox x:Name="MsgBox" Height="auto" Width="auto" TextWrapping="Wrap" Grid.ColumnSpan="2" Background="Black" Foreground="White" FontStyle="Italic" FontSize="20"/>
        <TextBox Text=""  Foreground="White"  x:Name="ChatInput" Height="50" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="Auto" Grid.ColumnSpan="2" Background="Black" BorderBrush="White" SelectionBrush="{x:Null}" FontSize="16" FontStyle="Italic" />
        <Button x:Name="SendMsgToChat" Content="Send" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Grid.Column="1" Margin="148,369,0,0" Height="50" BorderBrush="White" Background="Black" Foreground="White" Click="SendMsgToChat_Click"/>
    </Grid>
</Window>
